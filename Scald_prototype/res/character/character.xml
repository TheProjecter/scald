<?xml version="1.0" encoding="ISO-8859-1"?>


<!--
  File that has the configuration of one character
-->

<Character>

	<!-- Generic information of the character-->
	<Information>
		<!-- The name of the character -->
		<Name></Name>		
		<!-- The description of the character -->
		<Description></Description>	
	</Information>
		
	<!-- Inform the classes that can have, if only one then don´t change -->
	<Classes>
		<!-- The name of the class of the character -->
		<Class>Warrior</Class>
	</Classes>

	<!-- The Features used as status, are Skills -->
	<Status>
		<!-- The name of the Feature that must be loaded -->
		<Name></Name>
		<!-- The name of the Feature that must be loaded -->
		<Name></Name>		
	</Status>
	
	<!-- The script that configures the initial values for the status
	of the character -->
	<InitialValue>
		<!-- The file -->
		<File></File>
		<!-- The folder -->
		<Path></Path>
	</InitialValue>

	<!-- The Features used as Restrictions, that
	specify places that can be equipped -->
	<Restrictions>
		<!-- Name of the Feature that define -->
		<Name></Name>
		<!-- Name of the Feature that define -->
		<Name></Name>
	</Restrictions>
	
	<!-- The skills, what can be used -->
	<Skills>
		<!-- Name of the Skill -->
		<Name></Name>
		<!-- Name of the Skill -->
		<Name></Name>
	</Skills>
	
	<!-- The evolution table -->
	<XPTable>
		<!-- The file -->
		<File></File>
		<!-- The folder -->
		<Path></Path>
		<!-- Can evolve until -->
		<MaxLevel></MaxLevel>		
	</XPTable>
	
	<!-- The script that has how the character evolves, in this case is
	the status -->
	<Evolve>
		<!-- The file -->
		<File></File>
		<!-- The folder -->
		<Path></Path>		
	</Evolve>

	<!-- The Features that this class learns and how, the
	same as Learn at the Features, can be any type a skill or a magic or
	even a new status -->
	<Learned>	
	</Learned>
	
	<!-- The characteristics of the bag of the character if he has one -->
	<Bag>
		<!-- The maximum quantity of slots,places that hold itens,
		one item equals one slot, that has, zero means MANY itens -->
		<MaximumSlots></MaximumSlots>
	</Bag>
	
	<!-- The image that is used to represent in the menus-->
	<MenuImage>
		<!-- The file -->
		<File></File>
		<!-- Where the file is -->
		<Path></Path>
	</MenuImage>

	<!-- The model used for the battle -->
	<BattleModel>
		<!-- The model used -->
		<Model></Model>		
		<!-- The scale used for this model -->
		<Scale></Scale>	
	</BattleModel>

</Character>
