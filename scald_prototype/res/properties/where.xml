<?xml version="1.0" encoding="ISO-8859-1"?>


<!--
   File used to configure the display and the keyboard used
-->

<Where>

	<!-- Where the all the fonts are described -->
	<Fonts>
		<File>fonts.xml</File>
		<Path>res/fonts/</Path>
	</Fonts>

	<!-- Where the all the audio files are described -->	
	<Audio>
		<File>audio.xml</File>
		<Path>res/audio/</Path>
	</Audio>

	<!-- Where the all the menus are described -->
	<Menu>
		<File>menu.xml</File>
		<Path>res/properties/</Path>	
	</Menu>

	<!-- Where the all the settings for display are described -->	
	<Display>
		<File>display.xml</File>
		<Path>res/properties/</Path>	
	</Display>
	
	<!-- Where the keyboard is described -->
	<Keyboard>
		<File>keyboard.xml</File>
		<Path>res/properties/</Path>
	</Keyboard>

	<!-- Where the all the maps are indicated -->
	<Maps>
		<File>maps.xml</File>
		<Path>res/maps/</Path>
	</Maps>
	
	<!-- Where all the models are described -->
	<Models>
		<File>models.xml</File>
		<Path>res/models/</Path>	
	</Models>
	
	<!-- Where the abilitys are described -->
	<Abilitys>
		<File>ability.xml</File>
		<Path>res/features/</Path>
	</Abilitys>
		
	<!-- Where the magics are described -->
	<Magics>
		<File>magic.xml</File>
		<Path>res/features/</Path>
	</Magics>
		
	<!-- Where the usable itens and the equipaments
	are described -->
	<Itens>
		<File>item.xml</File>
		<Path>res/features/</Path>
	</Itens>
	
	<!-- Where all the classes are indicated -->
	<ClassNetwork>
		<File>classNetwork.xml</File>
		<Path>res/class/</Path>
	</ClassNetwork>
	
	<!-- Where all the characters are indicated -->
	<Characters>
		<File>characters.xml</File>
		<Path>res/character/</Path>
	</Characters>
	
	<!-- Where all the enemys are indicated -->
	<Enemys>
		<File>enemys.xml</File>
		<Path>res/enemy/</Path>
	</Enemys>
	
	<!-- Where the rules are specified -->
	<Rules>
		<File>rules.xml</File>
		<Path>res/rules/</Path>
	</Rules>
	
	<!-- Where the quests are specified -->
	<Quests>
		<File>quests.xml</File>
		<Path>res/quests/</Path>	
	</Quests>
	
	<!-- Where the enemies strategy for battle are -->
	<EnemiesStrategies>
		<File>strategy.xml</File>
		<Path>res/ia/</Path>
	</EnemiesStrategies>
	
	<!-- Where all the shops are described -->
	<Shop>
		<File>shop.xml</File>
		<Path>res/shop/</Path>	
	</Shop>
	
</Where>
